{% extends 'base.html.twig' %}

{% block title %}Suppliers{% endblock %}

{% block body %}
<div class="page">
    {% include 'common/sidebar.html.twig' %}

    <main class="page__content">
        <div class="details-head">
            <h1>Suppliers</h1>
            <a class="fs-button back-btn" href="{{ path('app_suppliers_index') }}""><i class=" fa-solid
                fa-arrow-left"></i>back to list</a>
        </div>

        <div class="details__card">
            <div class="details__card-info">
                <h3>DETAILS</h3>
                <div class="card-info-main">
                    <div class="top">
                        <div class="info-row">
                            <span class="label">Name</span>
                            <span class="h3-bold value">{{ supplier.name }}</span>
                        </div>
                        <div class="info-row">
                            <span class="label">ID</span>
                            <span class="value">{{ supplier.id }}</span>
                        </div>
                    </div>
                </div>

                <div class="card-info-details">
                    <div class="left">
                            <div class="info-row">
                            <span class="label">Contact Information</span>
                            <span class="value">{{ supplier.contactInfo}}</span>
                        </div>           
                    </div>
                    <div class="right">
                        <div class="info-row">
                            <span class="label">Address</span>
                            <span class="value">{{ supplier.address }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="details-footer">
            <a class="fs-button edit-btn" href="{{ path('app_suppliers_edit', {'id': supplier.id}) }}">Edit</a>

            {{ include('suppliers/_delete_form.html.twig') }}
        </div>
    </main>
</div>


{% endblock %}