{% extends 'base.html.twig' %}

{% block title %}Product Category Details{% endblock %}

{% block body %}
<div class="page">
    {% include 'common/sidebar.html.twig' %}

    <main class="page__content">
        <div class="details-head">
            <h1>Product Category Details</h1>
            <a class="fs-button back-btn" href="{{ path('app_product_categories_index') }}"><i
                    class="fa-solid fa-arrow-left"></i>back to list</a>
        </div>

        <div class="details__card">

            <div class="details__card-info">
                <div class="card-info-main">
                    <div class="top">
                        <div class="info-row">
                            <span class="h3-bold value">{{ product_category.name }}
                            </span>
                        </div>

                        <div class="info-row">
                            <span class="label">Product Category ID</span>
                            <span class="value">{{ product_category.id }}</span>
                        </div>
                    </div>

                    <div class="bottom">
                        <div class="info-row">
                            <span class="label">Description</span>
                            <span class="value">{{ product_category.description }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="details-footer">
            <a class="fs-button edit"
                href="{{ path('app_product_categories_edit', {'id': product_category.id}) }}"><i
                    class="fa-solid fa-pen-to-square"></i>Edit</a>
            {{ include('product_categories/_delete_form.html.twig') }}
        </div>
    </main>
</div>
{% endblock %}