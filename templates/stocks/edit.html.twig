{% extends 'base.html.twig' %}

{% block title %}Edit Stocks{% endblock %}

{% block body %}
{% form_theme form 'common/error.html.twig' %}

<div class="page"> <!-- overall container for page -->
    {% include 'common/sidebar.html.twig' %}

    <main class="page__content">

        <div class="details-head">
            <h1>Edit Stocks</h1>
            <a class="fs-button back-btn" href="{{ path('app_stocks_index') }}"><i
                    class="fa-solid fa-arrow-left"></i>back to list</a>
        </div>
        {% form_theme form 'common/error.html.twig' %}

        {% from 'common/error.html.twig' import form_errors %}
        {{ form_start(form, { 'attr': { 'class': 'fs-form' } }) }}
        {{ form_errors(form) }}
        {{ include('stocks/_form.html.twig') }}


        <div class="fs-button-group">
            <button class="fs-button save" type="submit">Edit Stocks</button>
        </div>

        {{ form_end(form) }}
        {% endblock %}