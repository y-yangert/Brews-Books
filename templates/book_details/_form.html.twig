{% if form.product is defined %}
<div class="fs-field">
    {{ form_label(form.product, 'Product', { 'label_attr': {'class': 'fs-label'} }) }}
    {% if form.product.vars.errors|length > 0 %}
    <div class="fs-error-message">{{ form_errors(form.product) }}</div>
    {% endif %}
    {{ form_widget(form.product, { 'attr': {'class': 'fs-select', 'placeholder': 'Enter product'}}) }}
</div>
{% endif %}

