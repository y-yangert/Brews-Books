{% extends 'base.html.twig' %}

{% block title %}Stocks{% endblock %}

{% block body %}

{% block body %}

<main class="page__content">
    <div class="details-head">
        <h1>Stocks</h1>
        <a class="fs-button back-btn" href="{{ path('app_stocks_index') }}"><i class=" fa-solid
                fa-arrow-left"></i>back to list</a>
    </div>

    <div class="details__card">
        <div class="details__card-info">
            <div class="card-info-main">
                <div class="top">
                    <div class="info-row">
                        <span class="h3-bold value">{{ stock.product.name }}</span>
                    </div>
                    <div class="info-row">
                        <span class="label">Stock ID</span>
                        <span class="value">{{ stock.id }}</span>
                    </div>
                    <div class="info-row">
                        <span class="label">Quantity in Stock</span>
                        <span class="value">{{ stock.quantityInStock }}</span>
                    </div>
                    <div class="info-row">
                        <span class="label">Last Restock Date</span>
                        <span class="value">{{ stock.lastRestockDate ? stock.lastRestockDate|date('Y-m-d H:i:s') :
                            '' }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="details-footer">
        <a class="fs-button edit-btn" href="{{ path('app_stocks_edit', {'id': stock.id}) }}">Edit</a>
        {{ include('stocks/_delete_form.html.twig') }}
    </div>
</main>

{% endblock %}