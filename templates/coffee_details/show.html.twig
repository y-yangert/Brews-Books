{% extends 'base.html.twig' %}

{% block title %}Coffee Details{% endblock %}

{% block body %}

<main class="page__content">
    <div class="details-head">
        <h1>Coffee Details</h1>
        <a class="fs-button back-btn" href="{{ path('app_coffee_details_index') }}"><i
                class="fa-solid fa-arrow-left"></i>back to list</a>
    </div>

    <div class="details__card">

        <div class="details__card-info">
            <div class="card-info-main">
                <div class="top">
                    <div class="info-row">
                        <span class="h3-bold value">{{ coffee_detail.product.name }}
                        </span>
                    </div>

                    <div class="info-row">
                        <span class="label">Coffee ID</span>
                        <span class="value">{{ coffee_detail.id }}</span>
                    </div>
                </div>
            </div>

            <h3> DETAILS</h3>

            <div class="card-info-details">
                <div class="left">
                    <div class="info-row">
                        <span class="label">Roast Level</span>
                        <span class="value">{{ coffee_detail.roastLevel }}</span>
                    </div>
                    <div class="info-row">
                        <span class="label">Weight per Package</span>
                        <span class="value">{{ coffee_detail.weightPerPackage }}</span>
                    </div>
                    <div class="info-row">
                        <span class="label">Flavor Descirption</span>
                        <span class="value">{{ coffee_detail.flavorDescription }}</span>
                    </div>
                </div>
                <div class="right">
                    <div class="info-row">
                        <span class="label">Product ID</span>
                        <span class="value">{{ coffee_detail.product.id }}</span>
                    </div>
                    <div class="info-row">
                        <span class="label">Product Link</span>
                        <span class="value"><a
                                href="{{path('app_products_show', {'id': coffee_detail.product.id})}}">{{coffee_detail.product.name}}</a></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="details-footer">
        <a class="fs-button edit-btn" href="{{ path('app_coffee_details_edit', {'id': coffee_detail.id}) }}">Edit</a>

        {{ include('coffee_details/_delete_form.html.twig') }}
    </div>
</main>

{% endblock %}