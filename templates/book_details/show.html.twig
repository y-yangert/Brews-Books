{% extends 'base.html.twig' %}

{% block title %}Book Details{% endblock %}

{% block body %}

<main class="page__content">
    <div class="details-head">
        <h1>Book Details</h1>
        <a class="fs-button back-btn" href="{{ path('app_book_details_index') }}"><i
                class="fa-solid fa-arrow-left"></i>back to list</a>
    </div>

    <div class="details__card">

        <div class="details__card-info">

            <div class="card-info-main">
                <div class="top">
                    <div class="info-row">
                        <span class="h3-bold value">{{ book_detail.product.name }}
                        </span>
                    </div>

                    <div class="info-row">
                        <span class="label">ID</span>
                        <span class="value">{{ book_detail.id }}</span>
                    </div>
                </div>
            </div>

            <h3> DETAILS</h3>

            <div class="card-info-details">
                <div class="left">
                    <div class="info-row">
                        <span class="label">Pages</span>
                        <span class="value">{{ book_detail.pages }}</span>
                    </div>
                    <div class="info-row">
                        <span class="label">IBSN</span>
                        <span class="value">{{ book_detail.ISBN }}</span>
                    </div>
                </div>
                <div class="right">
                    <div class="info-row">
                        <span class="label">Product ID</span>
                        <span class="value">{{ book_detail.product.id }}</span>
                    </div>
                    <div class="info-row">
                        <span class="label">Product Link</span>
                        <span class="value"><a
                                href="{{path('app_products_show', {'id': book_detail.product.id})}}">{{book_detail.product.name}}</a></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="details-footer">
        <a class="fs-button edit-btn" href="{{ path('app_book_details_edit', {'id': book_detail.id}) }}">Edit</a>

        {{ include('book_details/_delete_form.html.twig') }}
    </div>
</main>

{% endblock %}