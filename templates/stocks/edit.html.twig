{% extends 'base.html.twig' %}

{% block title %}Edit Stocks{% endblock %}

{% block body %}
{# Using default form theme and built-in form_errors #}

<main class="page__content">

    <div class="details-head">
        <h1>Edit Stocks</h1>
        <a class="fs-button back-btn" href="{{ path('app_stocks_index') }}"><i class="fa-solid fa-arrow-left"></i>back
            to list</a>
    </div>
    {{ form_start(form, { 'attr': { 'class': 'fs-form' } }) }}
    {{ form_errors(form) }}
    {{ include('stocks/_form.html.twig') }}


    <div class="fs-button-group">
        <button class="fs-button save" type="submit">Edit Stocks</button>
    </div>

    {{ form_end(form) }}
</main>

{% endblock %}