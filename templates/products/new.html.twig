{% extends 'base.html.twig' %}

{% block title %}New Products{% endblock %}

{% block body %}

{% block body %}

<main class="page__content">

    <div class="details-head">
        <h1>Add New Product</h1>
        <a class="fs-button back-btn" href="{{ path('app_products_index') }}"><i class="fa-solid fa-arrow-left"></i>back
            to list</a>
    </div>

    {{ form_start (form, { 'attr': { 'class': 'fs-form', 'target': '_top', 'novalidate': 'novalidate' } }) }}
    {{ include ('products/_form.html.twig') }}
    <div class="fs-button-group">
        <button class="fs-button save" type="submit">Add New Product</button>
    </div>
    {{ form_end(form) }}

</main>

{% endblock %}